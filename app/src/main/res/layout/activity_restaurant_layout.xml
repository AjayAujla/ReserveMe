<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.root.reserveme.RestaurantLayoutActivity">

    <requestFocus
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="189dp" />

    <Button
        android:id="@+id/button_restaurantLayout__viewTables"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="switchToAllTablesLayout"
        android:text="List mode" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_restaurantLayout__viewTables">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0">

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_row="0"
                android:background="@drawable/button_bg_transparent"
                android:scaleType="fitXY"
                android:src="@drawable/booth" />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:layout_row="0"
                android:background="@drawable/button_bg_transparent"
                android:scaleType="fitXY"
                android:src="@drawable/booth" />
        </GridLayout>


        <ImageButton
            android:id="@+id/button6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="3"
            android:layout_row="2"
            android:background="@drawable/button_bg_transparent"
            android:scaleType="fitXY"
            android:src="@drawable/layout_table" />

        <ImageButton
            android:id="@+id/button7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="3"
            android:layout_row="5"
            android:background="@drawable/button_bg_transparent"
            android:scaleType="fitXY"
            android:src="@drawable/layout_table" />

        <ImageButton
            android:id="@+id/button8"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_row="10"
            android:background="@drawable/button_bg_transparent"
            android:scaleType="fitXY"
            android:src="@drawable/counter" />

    </GridLayout>

</RelativeLayout>