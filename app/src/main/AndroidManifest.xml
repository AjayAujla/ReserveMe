<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.root.reserveme">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".AllTablesActivity"
            android:label="@string/title_activity_all_tables"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RestaurantLayoutActivity" />
        <activity
            android:name=".TableDetailsActivity"
            android:label="@string/title_activity_table_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ReserveTableActivity" />
        <activity android:name=".ReservationStatusActivity"></activity>
    </application>

</manifest>
